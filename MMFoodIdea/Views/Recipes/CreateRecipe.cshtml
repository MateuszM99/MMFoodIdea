@model MMFI_Entites.Models.Recipe


@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/recipe-style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <title>Document</title>
</head>
<body>

    <div class="container">
        <h1 class="create-recipe">Create Recipe<i class="fas fa-utensils"></i></h1>
        <div class="box">
            <form asp-action="CreateRecipe" method="post" id="form" enctype="multipart/form-data">
                <div class="recipe-title">
                    <h3>Enter recipe title :</h3>
                    <input type="text" name="RecipeName" class="title" placeholder="Enter title here">
                </div>
                <div class="time-input">
                    <h3>How much time does it take :</h3>
                    <input type="text" name="RecipeTime" class="title" placeholder="Enter time here">
                </div>
                <div class="portions-input">
                    <h3>Select number of portions :</h3>
                    <input type="text" name="RecipePortions" class="title" placeholder="Enter portions here">
                </div>
                <div class="category-input">
                    <h3>Select a category for your recipe :</h3>
                    <input type="text" name="RecipeCategory" class="title" placeholder="Enter category here">
                </div>
                <div class="add-ingridients">
                    <h3 class="">Add Ingridient :</h3>
                    <input type="button" class="ingridient-input" id="btnAdd" value="Add ingridient" />
                </div>
                <div class="ingridients-list">
                    <h3>Ingridients :</h3>
                    <div id="ingridientsContainer">
                        @Html.EditorFor(model => model.Ingridients)
                    </div>
                </div>
                <div class="instructions">
                    <h3>Write down the steps here :</h3>
                    <textarea name="RecipeInstructions"></textarea>
                </div>              
                <div class="image-input">
                    <input multiple name="images" type="file" id="file" accept="image/*" />
                    <label for="file">Choose Images</label>
                </div>
                <div class="add-recipe">
                    <button type="submit">Add recipe</button>
                </div>
            </form>
        </div>
    </div>

    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="~/lib/jquery/dist/jquery-unobtrusive-ajax.min.js"></script>
    <script src="~/js/create-recipe.js"></script>
</body>
</html>