<body onload="currentSlide(1)">
    <div class="container">
        <div class="button">
            <button class="like-button">Like</button>
        </div>
        <div class="recipe-title">
            <h1>Recipe Title</h1>
        </div>
        <div class="slideshow-container">

            <div class="images">
                <div class="numbertext">1 / 3</div>
                <img src="https://www.bbcgoodfood.com/sites/default/files/recipe-collections/collection-image/2013/05/chorizo-mozarella-gnocchi-bake-cropped.jpg">

                <div class="recipe-info">
                    <p>Servings : 2 portions</p>
                    <p>Time to prepare : 30 minutes</p>
                    <p></p>
                </div>
            </div>

            <div class="images">
                <div class="numbertext">2 / 3</div>
                <img src="https://www.bbcgoodfood.com/sites/default/files/recipe-collections/collection-image/2013/05/chorizo-mozarella-gnocchi-bake-cropped.jpg">

                <div class="recipe-info">
                    <p>Servings : 2 portions</p>
                    <p>Time to prepare : 30 minutes</p>
                    <p></p>
                </div>
            </div>

            <div class="images">
                <div class="numbertext">3 / 3</div>
                <img src="https://www.bbcgoodfood.com/sites/default/files/recipe-collections/collection-image/2013/05/chorizo-mozarella-gnocchi-bake-cropped.jpg">

                <div class="recipe-info">
                    <p>Servings : 2 portions</p>
                    <p>Time to prepare : 30 minutes</p>
                    <p></p>
                </div>
            </div>

            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <br>
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
        </div>

        <div class="ingridients-list">
            <div class="adjustment">
                <div class="counter">
                    <button class="adjust-minus" onclick="decreaseCounter()">-</button>
                    <div class="adjustment-size" id="counter">1</div>
                    <button class="adjust-plus" onclick="increaseCounter()">+</button>
                </div>
                <button class="adjustment-button">Adjustment button</button>
            </div>
            <h1>Ingridients :</h1>
            <ul>
                <li>2 eggs</li>
                <li>3 carrots</li>
                <li>200g beef</li>
                <li>olive oil</li>
            </ul>
        </div>
